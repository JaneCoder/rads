<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <fieldset>
    <%= f.fields_for :project_affiliated_records do |rf| %>
      <%= rf.hidden_field :id %>
      <%= rf.hidden_field :record_id %>
      <%= rf.check_box :_destroy, {:checked => rf.object.persisted?}, '0', '1' %>
      <%= rf.label :_destroy, rf.object.affiliated_record %>
      <br>
    <% end %>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
