<h1>Listing repository users</h1>

<% if @repository_users.empty? %>
<p>There are no repository users to display.</p>
<% else %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Is Administrator?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @repository_users.each do |repository_user| %>
      <tr>
        <td><%= repository_user.name %></td>
        <td><%= repository_user.email %></td>
        <td><%= repository_user.is_administrator? %></td>
        <%= render partial: 'user_administration_panel', locals: {user: repository_user} %>
      </tr>
<% end %>
  </tbody>
</table>
<% end %>
